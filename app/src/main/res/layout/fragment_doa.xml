<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.laurensiusds.doakatolikbahasasunda.FragmentDoa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivFragmentDoa"
            android:layout_width="300px"
            android:layout_height="300px"
            android:src="@mipmap/doa"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvJudulDoaSunda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Doa Sunda"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvJudulDoaIndo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Doa Indo"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:textStyle="italic"/>


        <TextView
            android:id="@+id/tvIsiDoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Isi Doa"
            android:textSize="16sp"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</ScrollView>
